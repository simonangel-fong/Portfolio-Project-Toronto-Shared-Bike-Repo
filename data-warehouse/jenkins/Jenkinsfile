pipeline {
  agent any

  options {
    timestamps()
  }

  stages{
    stage('Checkout') {
      steps {
        checkout scm
        sh 'ls -la'
      }
    }
  
    stage('Clean previous run') {
      steps {
        // Clean up old containers/volumes so init scripts re-run on a fresh DB
        sh '''
          set -eux
          docker compose -f compose.pgdb.yml down -v || true
        '''
      }
    }

    stage('Create PGDB & Process Data') {
      steps {
        dir("data-warehouse/postgresql"){
          sh '''
            set -eux

            ls -la || true
            docker compose -f docker-compose.yaml up -d
            docker compose -f docker-compose.yaml ps

            sleep 10
          '''
        }
      }
    }
  }
}

 