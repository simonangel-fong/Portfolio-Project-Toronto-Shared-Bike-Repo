pipeline {
  agent any

  environment {
    POSTGRES_USER = credentials('postgres_user')
    POSTGRES_DB = credentials('postgres_db')
  }

  stages {

    stage('Cleanup Workspace & Checkout') {
        steps {
            echo "#################### Cleans the workspace ####################"
            cleanWs()
            
            echo "#################### Checkout ####################"
            checkout scm // Explicitly checks out the SCM after cleaning.

            sh """
              ls
              pwd
            """
        }
    }
  }
}
 